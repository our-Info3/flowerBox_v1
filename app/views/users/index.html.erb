<h1><%= t 'title' %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th><%= t 'password' %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td class = "btn"><%= link_to 'Show', user %></td>
        <td class = "btn"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class = "btn"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class = "btn"><%= link_to 'New User', new_user_path %></div>
